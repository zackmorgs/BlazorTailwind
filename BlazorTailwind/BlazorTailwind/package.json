{
  "devDependencies": {
    "tailwindcss": "^3.4.10"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "scripts" : {
    "start" : "npm-run-all --parallel watch:css watch:dotnet",
    "watch:css" : "tailwindcss -i ./wwwroot/app.scss -o ./wwwroot/app.css --watch",
    "watch:dotnet" : "dotnet watch run"
  }
}
